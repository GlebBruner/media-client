<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="352dp"
            android:layout_height="33dp"
            android:text="Hashtags:"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="536dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="352dp"
            android:layout_height="33dp"
            android:text="Description:"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="690dp" />

        <View
            android:id="@+id/view2"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="@android:color/black"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="421dp" />

        <Spinner
            android:id="@+id/oc_spinner_ph"
            android:layout_width="106dp"
            android:layout_height="33dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            tools:layout_editor_absoluteX="139dp" />

        <Spinner
            android:id="@+id/oc_spinner_vid"
            android:layout_width="106dp"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/oc_spinner_ph"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="106dp"
            android:layout_height="33dp"
            android:layout_marginStart="16dp"
            android:text="Video:"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            tools:layout_editor_absoluteY="196dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="106dp"
            android:layout_height="33dp"
            android:layout_marginEnd="16dp"
            android:text="Category:"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/textView2"
            tools:layout_editor_absoluteY="196dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="106dp"
            android:layout_height="33dp"
            android:text="Photo:"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="196dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="352dp"
            android:layout_height="33dp"
            android:text="Deadline:"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="317dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="168dp"
            android:layout_height="33dp"
            android:text="Private?"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="436dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="168dp"
            android:layout_height="33dp"
            android:text="Cost:"
            android:textAlignment="center"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="436dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="352dp"
            android:layout_height="33dp"
            android:text="Title:"
            android:textAlignment="center"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="85dp" />

        <Spinner
            android:id="@+id/oc_spinner_cat"
            android:layout_width="106dp"
            android:layout_height="33dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/oc_spinner_ph"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/oc_hashtags"
            android:layout_width="355dp"
            android:layout_height="47dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="15dp"
            tools:layout_editor_absoluteY="580dp" />

        <EditText
            android:id="@+id/oc_title"
            android:layout_width="355dp"
            android:layout_height="47dp"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="125dp" />

        <View
            android:id="@+id/view"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="@android:color/black"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="525dp" />

        <View
            android:id="@+id/view5"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="@android:color/black"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="678dp" />

        <View
            android:id="@+id/view3"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="@android:color/black"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="303dp" />

        <EditText
            android:id="@+id/oc_dl_date"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="date"
            android:inputType="date"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/oc_dl_time"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="time"
            android:inputType="time"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:layout_editor_absoluteX="200dp" />

        <CheckBox
            android:id="@+id/oc_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:textAlignment="viewStart"
            tools:layout_editor_absoluteX="261dp"
            tools:layout_editor_absoluteY="479dp" />

        <EditText
            android:id="@+id/oc_money"
            android:layout_width="168dp"
            android:layout_height="38dp"
            android:ems="10"
            android:hint="money"
            android:inputType="number"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="479dp" />

        <Button
            android:id="@+id/oc_button_add_hashtag"
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:text="+"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="626dp" />

        <EditText
            android:id="@+id/oc_descr"
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="add more info"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="736dp" />

        <Button
            android:id="@+id/oc_button_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oc_button_create"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="789dp" />

    </android.support.constraint.ConstraintLayout>


</ScrollView>




